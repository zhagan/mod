{
  "name": "@mode-7/mod",
  "version": "0.1.8",
  "description": "mod - Modular Web Audio components for React",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./dist/index.css": "./dist/index.css"
  },
  "files": [
    "dist",
    "src/modui",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "jest --silent",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --silent",
    "test:verbose": "jest",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "web-audio",
    "react",
    "audio",
    "modular",
    "synthesizer",
    "daw",
    "music",
    "sound",
    "effects",
    "modulation",
    "synth"
  ],
  "author": "mode-7",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Mode7Labs/mod.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/Mode7Labs/mod/issues"
  },
  "homepage": "https://mode-7.github.io/mod",
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-jest": "^29.4.5",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  }
}
